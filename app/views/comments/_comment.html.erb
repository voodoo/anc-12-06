<div id="<%= dom_id(comment) %>" class="px-6 py-6 hover:bg-gray-50 transition duration-150 ease-in-out border-b border-gray-100 last:border-b-0">
  <div class="flex space-x-3">
    <div class="flex-shrink-0">
      <div class="h-9 w-9 rounded-full bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center shadow-sm">
        <span class="text-base font-medium text-white"><%= comment.user.email_address.first.upcase %></span>
      </div>
    </div>
    <div class="flex-grow min-w-0">
      <div class="flex items-center space-x-2">
        <span class="font-medium text-gray-900 truncate"><%= comment.user.email_address %></span>
        <span class="text-xs text-gray-500">â€¢</span>
        <time datetime="<%= comment.created_at.iso8601 %>" class="text-xs text-gray-500">
          <%= time_ago_in_words(comment.created_at) %> ago
        </time>
      </div>
      <div class="mt-1.5 text-sm text-gray-700 whitespace-pre-wrap break-words">
        <%= comment.content %>
      </div>
      <div class="mt-2.5 flex items-center space-x-4">
        <button class="text-gray-500 hover:text-gray-700 text-sm">Like</button>
        <button class="text-gray-500 hover:text-gray-700 text-sm">Reply</button>
      </div>
    </div>
  </div>
</div> 