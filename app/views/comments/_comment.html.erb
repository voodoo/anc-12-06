<div id="<%= dom_id(comment) %>" class="comment py-2 border-t border-gray-100 first:border-t-0 bg-gradient-to-r from-gray-50 to-white">
  <div class="flex space-x-3">
    <div class="flex-shrink-0">
      <div class="h-10 w-10 rounded-full bg-gray-300 flex items-center justify-center">
        <span class="text-lg font-medium text-white"><%= comment.user.email_address.first.upcase %></span>
      </div>
    </div>
    <div class="flex-grow">
      <div class="text-sm">
        <span class="font-medium text-gray-900"><%= comment.user.email_address %></span>
      </div>
      <div class="mt-1 text-sm text-gray-700">
        <%= comment.content %>
      </div>
      <div class="mt-2 text-xs text-gray-500">
        Posted <%= time_ago_in_words(comment.created_at) %> ago
      </div>
    </div>
  </div>
</div> 