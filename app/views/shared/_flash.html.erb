<div id="flash" class="fixed top-4 right-4 z-50" 
     data-controller="auto-dismiss" 
     data-auto-dismiss-timeout-value="3000">
  <% flash.each do |type, message| %>
    <div class="<%= flash_class(type) %> mb-2 rounded-lg p-4 shadow-md transition transform duration-500 ease-in-out"
         data-auto-dismiss-target="message">
      <div class="flex items-center">
        <%= flash_icon(type) %>
        <div class="ml-3">
          <p class="text-sm font-medium text-gray-900"><%= message %></p>
        </div>
        <div class="ml-auto pl-3">
          <div class="-mx-1.5 -my-1.5">
            <button type="button" 
                    class="inline-flex rounded-md p-1.5 focus:outline-none focus:ring-2 focus:ring-offset-2"
                    data-action="click->auto-dismiss#dismiss">
              <span class="sr-only">Dismiss</span>
              <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </button>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div> 